FROM python:3.11-slim

WORKDIR /app
ENV PYTHONDONTWRITEBYTECODE=1 PYTHONUNBUFFERED=1

COPY pyproject.toml .
RUN pip install --no-cache-dir \
    "flet[all]" \
    httpx \
    websockets

COPY app ./app
COPY main.py ./main.py

ENV API_URL=http://api:8000
ENV OPEN_BROWSER=0

CMD ["python", "main.py", "--host", "0.0.0.0", "--port", "8550", "--no-browser"]
